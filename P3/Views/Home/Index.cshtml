@using P3.Models

@model  TicketViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Tickets</h1>
    <p class="lead">Bienvenido (a) seleccione sus entrada para el partido</p>
</div>

<div class="row">
    <div class="col-md-6">
        <img src="~/Content/img/butacas.PNG" class="img-responsive" />
    </div>
    <div class="col-md-6">
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="col-md-2 control-label" for="textinput">Sección</label>
                    <div class="col-md-10">
                      
                        @Html.DropDownListFor(e => e.SelectedSection, Model.SectionsSelectList, "Sección", new { @class = "form-control input-md", @onchange = "LoadSectionInformation(this.value)" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="textinput">Costo</label>
                    <div class="col-md-10">
                        <label class="control-label" id="lblPriceSection">0</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="textinput">Asientos disponibles</label>
                    <div class="col-md-10">
                        <label class="control-label" id="lblAvailableSeats">0</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="textinput">Asientos comprados</label>
                    <div class="col-md-10">
                        <label class="control-label" id="lblSeatsSold">0</label>
                    </div>
                </div>

             

                <div class="form-group">
                    <label class="col-md-2 control-label" for="textinput">Cantidad</label>
                    <div class="col-md-10">
                        @Html.EditorFor(e => e.QuantityToBuy, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
    
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Comprar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<script>

    function LoadSectionInformation(selectedId)
    {
      
        $.ajax({
            url: '/Home/GetSection',
            type: "GET",
            dataType: "JSON",
            data: { id: selectedId },
            success: function (section) {
                $('#lblPriceSection').text(section.Price);
                $('#lblAvailableSeats').text(section.QuantitySeatsAvailable);
                $('#lblSeatsSold').text(section.QuantitySeatsSold);
            },
            error: function (error) {

            }
            
        });
    }

</script>